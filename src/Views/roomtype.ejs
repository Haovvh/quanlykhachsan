<div class="container">
    <h1 class="mt-4 mb-4 text-center text-primary"><b><%= title %></b></h1>

    <span id="message"></span>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-3">
                    <input type="text" name="search" id="search" class="form-control" placeholder="Tìm kiếm"/>
                </div>
                <div class="col-2">
                    <button type="button" id="search" class="btn btn-success   search">Tìm kiếm</button>
                </div>
                <div class="col-6">
                    <button type="button" id="add_data" class="btn btn-primary float-end">Add</button>
                </div>                
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="roomtype_data">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">Loại phòng</th>
                            <th scope="col">Đơn giá</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
  

<div class="modal" tabindex="-1" id="actionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="sample_form" class="sample_form">
                <div class="modal-header" id="dynamicModalTitle">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Loại phòng</label>
                        <input type="text" name="roomtypename" id="roomtypename" class="form-control roomtypename" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Đơn giá</label>
                        <input type="number" name="price" id="price" class="form-control price" required/>
                    </div>                     
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="actionButton">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    
    const viewMode = ["GET", "POST", "PUT", "DELETE"];
    var indexMode = "GET";

    $(document).ready( function(){
    
        load_data();
    
        function load_data()
        {           
            console.log("Load_data");
            $.ajax({
                
                url: '/roomtype/all',
                method: viewMode[0],
                dataType : "JSON",
                success:function( data)
                {                    
                    var html = ''; 

                    if(data.data.length > 0) {
                        for(var count = 0; count < data.data.length; count++)
                        {
                            let roomtype = data.data[count];
                            let _stt = count+1;
                            let price = (parseInt(roomtype.price)).toLocaleString();
                            html += `
                            <tr>
                                <td>`+ _stt +`</td>
                                <td>`+roomtype.roomtypename+`</td>
                                <td>`+price+`</td>
                                <td>
                                    <button type="button" class="btn btn-warning btn-sm edit" data-id="`+roomtype.id+`">
                                        Edit
                                    </button>
                                    &nbsp;
                                    <button type="button" class="btn btn-danger btn-sm delete" data-id="`+roomtype.id+`">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                            `;
                        }
                    }                   
    
                    document.querySelector('#roomtype_data tbody').innerHTML = html;    
                    indexMode = viewMode[1];            
                }
            });
        }
    
        $('#add_data').click(function(){
            indexMode = viewMode[1];
            console.log("add_data")

            $('#dynamicModalTitle').text('Add RoomType');
    
            $('#sample_form')[0].reset();
    
            $('#action').val('Add');
    
            $('#actionButton').text('Add');
    
            $('#actionModal').modal('show');
    
        });
    
        $('#sample_form').on('submit', function(event){
            console.log("index  mode :::::", indexMode)
    
            event.preventDefault();
    
            $.ajax({
                url:'/roomtype',
                method:indexMode,
                data:$('#sample_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#actionButton').attr('disabled', 'disabled');
                },
                success:function(data)
                {
                    if(data.success){
                        $('#actionButton').attr('disabled', false);

                        document.querySelector('#message').innerHTML = '<div class="alert alert-success">'+data.message+'</div>';
            
                        $('#actionModal').modal('hide');
        
                        load_data();
        
                        setTimeout(function(){
                            document.querySelector('#message').innerHTML = '';
                        }, 5000);
                    } else {
                        alert("Error")
                    }
                    
                }
            });
    
        });
        
        $(document).on('click', '.edit', function(){
            console.log("Editt ::::")
            var id = $(this).data('id');          
            
    
            $.ajax({
                url:`/roomtype/${id}`,
                method: viewMode[0],
                dataType:"JSON",
                success:function(data) {
                    console.log("data", data)
                    if( data.success  ) {                        
                        $('#dynamicModalTitle').text('Edit Data');
    
                        $('#action').val('Edit');
                            
                        $('#actionButton').text('Edit');
                        $('#actionModal').modal('show');
                        const tempData = data.data;
                        indexMode = viewMode[2];
                        $('#roomtypename').val(tempData.roomtypename);
                        $('#price').val(tempData.price);
                        $('#id').val(tempData.id);
                    }else {
                        alert("Error ")
                    }
                    
                    
                }
            });    
        });
    
        $(document).on('click', '.delete', function(){
    
            var id = $(this).data('id');
    
            if(confirm("Are you sure you want to delete this data?"))
            {
                
                $.ajax({
                    url:'/roomtype',
                    method: viewMode[3],
                    data: {id: id},
                    dataType:"JSON",
                    success:function(data)
                    {
                        if(data.success) {
                            document.querySelector('#message').innerHTML = '<div class="alert alert-success">'+data.message+'</div>';
                            load_data();
                            setTimeout(function(){
                                document.querySelector('#message').innerHTML = '';
                            }, 5000);
                        } else {
                            alert("Error");
                        }
                        
                    }
                });
            }
    
        });
    });
    
    </script>