  <div class="container">
    <h1 class="mt-4 mb-4 text-center text-primary"><b><%= title %></b></h1>

    <span id="message"></span>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col col-sm-9">Customer Data</div>
                <div class="col col-sm-3">
                    <button type="button" id="add_data" class="btn btn-success btn-sm float-end">Add</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="customer_data">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">FullName</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">CitizenIdentityCard</th>
                            <th scope="col">CustomerType</th>
                            <th scope="col">DateOfBirth</th>
                            <th scope="col">Gender</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
  

<div class="modal" tabindex="-1" id="actionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="sample_form" class="sample_form">
                <div class="modal-header" id="dynamicModalTitle">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">FullName</label>
                        <input type="text" name="fullname" id="fullname" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="text" name="phone" id="phone" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CitizenIdentityCard </label>
                        <input type="text" name="citizenIdentityCard" id="citizenIdentityCard" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address </label>
                        <input type="text" name="address" id="address" class="form-control" required/>
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">CustomerType</label>
                        <select name="customertype" id="customertype" class="form-control customertype">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date Of Birth</label>
                        <input type="date" class="form-control"  id="dateofbirth" name="dateofbirth" placeholder="DateOfBirth" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <select name="gender" id="gender" class="form-control gender">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="actionButton">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    const viewMode = ["GET", "POST", "PUT", "DELETE"];
    var indexMode = "GET";

    
    var _customerType =`
    `;
    var _genderType = `
    `;

    $(document).ready( function(){
    
        load_data();
    
        function load_data()
        {            
            console.log("Load_data");
            $.ajax({
                url: '/customer/all',
                method: viewMode[0],
                data:{action:'fetch'},
                dataType : "JSON",
                success:function( data)
                {
                    _customerType =``;
                    _genderType = ``;
                    var html = '';     
                           
                    if(data.customerType.length > 0) {
                        console.log(data.customerType);
                        for(let index = 0 ; index <data.customerType.length  ; index++) {
                            let _index = index + 1;
                            _customerType = `<option value="` + data.customerType[index].id+`">` 
                                + data.customerType[index].customertypename + `</option>
                            ` + _customerType;
                        }                        
                        _customerType += `
                        `;                        
                    }                    

                    if(data.genderType.length > 0) {
                        console.log(data.genderType);
                        for(let index = 0 ; index <data.genderType.length  ; index++) {
                            let _index = index + 1;
                            _genderType = `<option value="` + data.genderType[index].id+`">` 
                                + data.genderType[index].gendername + `</option>
                            ` + _genderType;
                        }                        
                        _genderType += `
                        `;                        
                    }
    
                    if(data.data && data.data.length > 0) {
                        for(var count = 0; count < data.data.length; count++)
                        {
                            let _stt = count+1;
                            html += `
                            <tr>
                                <td>`+ _stt +`</td>
                                <td>`+data.data[count].fullname+`</td>
                                <td>`+data.data[count].phone+`</td>
                                <td>`+data.data[count].address+`</td>
                                <td>`+data.data[count].citizenIdentityCard+`</td>
                                <td>`+data.data[count].customertypename+`</td>
                                <td>`+data.data[count].dateofbirth+`</td>
                                <td>`+data.data[count].gendername+`</td>
                                
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data[count].id+`">Edit</button>
                                &nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data[count].id+`">Delete</button></td>
                            </tr>
                            `;
                        }
                    }   
                    document.querySelector('#customer_data tbody').innerHTML = html;   
                    indexMode = viewMode[1]
                }
            });
        }
    
        $('#add_data').click(function(){
            console.log("add_data")
            document.querySelector('#sample_form div div .customertype').innerHTML = _customerType;  
            document.querySelector('#sample_form div div .gender').innerHTML = _genderType;  

            $('#dynamicModalTitle').text('Add Customer');
    
            $('#sample_form')[0].reset();
    
            $('#action').val('Add');
    
            $('#actionButton').text('Add');
            $(document).ready( function() {
                
                var now = new Date();
                var month = (now.getMonth() + 1);               
                var day = now.getDate();
                if (month < 10) 
                    month = "0" + month;
                if (day < 10) 
                    day = "0" + day;
                var today = now.getFullYear() + '-' + month + '-' + day;
                $('#dateofbirth').val(today);
            });
            indexMode = viewMode[1];
            $('#actionModal').modal('show');
    
        });
    
        $('#sample_form').on('submit', function(event){
            console.log("indexmode === > ", indexMode)
    
            event.preventDefault();
    
            $.ajax({
                url:'/customer',
                method: indexMode,
                data:$('#sample_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#actionButton').attr('disabled', 'disabled');
                },
                success:function(data)
                {
                    $('#actionButton').attr('disabled', false);
                    document.querySelector('#message').innerHTML = '<div class="alert alert-success">'+data.message+'</div>';
    
                    //$('#message').html('<div class="alert alert-success">'+data.message+'</div>');
    
                    $('#actionModal').modal('hide');
    
                    load_data();
    
                    setTimeout(function(){
                        document.querySelector('#message').innerHTML = '';
                    }, 5000);
                }
            });
    
        });
        
        $(document).on('click', '.edit', function(){
            console.log("Editt ::::")
            
            
            document.querySelector('#sample_form div div .customertype').innerHTML = _customerType;  
            document.querySelector('#sample_form div div .gender').innerHTML = _genderType;  
    
            var id = $(this).data('id');
    
            
            $.ajax({
                url:`/customer/${id}`,
                method: viewMode[0],
                dataType:"JSON",
                success:function(data)
                {
                    const temp = data.data;
                    if(data.success) {
                        $('#dynamicModalTitle').text('Edit Data');
    
                        $('#action').val('Edit');
                
                        $('#actionButton').text('Edit');
                
                        $('#actionModal').modal('show');
                        console.log("Data :::: ===>", data)
                        indexMode = viewMode[2];
                        $('#fullname').val(temp.fullname);
                        $('#phone').val(temp.phone);
                        $('#address').val(temp.address);
                        $('#citizenIdentityCard').val(temp.citizenIdentityCard);
                        $('#customertype').val(temp.customertype);
                        $('#dateofbirth').val(temp.dateofbirth);
                        $('#gender').val(temp.gender);
                        $('#id').val(temp.id);
                    } else {
                        alert("Error")
                    }
                    
                }
            });
    
        });
    
        $(document).on('click', '.delete', function(){
    
            var id = $(this).data('id');
    
            if(confirm("Are you sure you want to delete this data?"))
            {
                $.ajax({
                    url:'/customer',
                    method: viewMode[3],
                    data:{ id:id},
                    dataType:"JSON",
                    success:function(data)
                    {
                        if(data.success) {
                            document.querySelector('#message').innerHTML = '<div class="alert alert-success">'+data.message+'</div>';

                            load_data();
                            setTimeout(function(){
                                document.querySelector('#message').innerHTML = '';
                            }, 5000);
                        }else {
                            alert("Error")
                        }
                        
                    }
                });
            }
    
        });
    });
    
    </script>