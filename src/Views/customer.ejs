  <div class="container">
    <h1 class="mt-4 mb-4 text-center text-primary"><b><%= title %></b></h1>

    <span id="message"></span>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col col-sm-9">Customer Data</div>
                <div class="col col-sm-3">
                    <button type="button" id="add_data" class="btn btn-success btn-sm float-end">Add</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="customer_data">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">FullName</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">CitizenIdentityCard</th>
                            <th scope="col">CustomerType</th>
                            <th scope="col">DateOfBirth</th>
                            <th scope="col">Gender</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
  

<div class="modal" tabindex="-1" id="action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="sample_form" class="sample_form">
                <div class="modal-header" id="dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">FullName</label>
                        <input type="text" name="fullname" id="fullname" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="text" name="phone" id="phone" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CitizenIdentityCard </label>
                        <input type="text" name="citizenIdentityCard" id="citizenIdentityCard" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address </label>
                        <input type="text" name="address" id="address" class="form-control" />
                    </div>
                    <div class="mb-3" >
                        <label class="form-label">CustomerType</label>
                        <select name="customertype" id="customertype" class="form-control customertype">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date Of Birth</label>
                        <input type="date" class="form-control" name="dateofbirth" placeholder="DateOfBirth" >
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <select name="gender" id="gender" class="form-control gender">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="action_button">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    const _url = "http://localhost:8080/customer/action";
    var _customerType =`
    `;
    var _genderType = `
    `;

    $(document).ready( function(){
    
        load_data();
    
        function load_data()
        {            
            console.log("Load_data");
            $.ajax({
                url: _url,
                method:"POST",
                data:{action:'fetch'},
                dataType : "JSON",
                success:function( data)
                {
                    _customerType =`
                                    `;
                    _genderType = `
                                `;
                    var html = '';     
                           
                    if(data.customerType.length > 0) {
                        console.log(data.customerType);
                        for(let index = 0 ; index <data.customerType.length  ; index++) {
                            let _index = index + 1;
                            _customerType = `<option value="` + data.customerType[index].id+`">` 
                                + data.customerType[index].name + `</option>
                            ` + _customerType;
                        }                        
                        _customerType += `
                        `;                        
                    }                    

                    if(data.genderType.length > 0) {
                        console.log(data.genderType);
                        for(let index = 0 ; index <data.genderType.length  ; index++) {
                            let _index = index + 1;
                            _genderType = `<option value="` + data.genderType[index].id+`">` 
                                + data.genderType[index].name + `</option>
                            ` + _genderType;
                        }                        
                        _genderType += `
                        `;                        
                    }
    
                    if(data.data.length > 0) {
                        for(var count = 0; count < data.data.length; count++)
                        {
                            let _stt = count+1;
                            html += `
                            <tr>
                                <td>`+ _stt +`</td>
                                <td>`+data.data[count].fullname+`</td>
                                <td>`+data.data[count].phone+`</td>
                                <td>`+data.data[count].address+`</td>
                                <td>`+data.data[count].citizenIdentityCard+`</td>
                                <td>`+data.data[count].customertype+`</td>
                                <td>`+data.data[count].dateofbirth+`</td>
                                <td>`+data.data[count].gender+`</td>
                                
                                <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data[count].id+`">Edit</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data[count].id+`">Delete</button></td>
                            </tr>
                            `;
                        }
                    }                   
    
                    $('#customer_data tbody').html(html);
                    
                }
            });
        }
    
        $('#add_data').click(function(){
            console.log("add_data")
            console.log(_genderType);
            console.log(_customerType);
            $('#sample_form div div .customertype').html(_customerType);
            $('#sample_form div div .gender').html(_genderType);

            $('#dynamic_modal_title').text('Add Customer');
    
            $('#sample_form')[0].reset();
    
            $('#action').val('Add');
    
            $('#action_button').text('Add');
    
            $('#action_modal').modal('show');
    
        });
    
        $('#sample_form').on('submit', function(event){
    
            event.preventDefault();
    
            $.ajax({
                url:_url,
                method:"POST",
                data:$('#sample_form').serialize(),
                dataType:"JSON",
                beforeSend:function(){
                    $('#action_button').attr('disabled', 'disabled');
                },
                success:function(data)
                {
                    $('#action_button').attr('disabled', false);
    
                    $('#message').html('<div class="alert alert-success">'+data.message+'</div>');
    
                    $('#action_modal').modal('hide');
    
                    load_data();
    
                    setTimeout(function(){
                        $('#message').html('');
                    }, 5000);
                }
            });
    
        });
        
        $(document).on('click', '.edit', function(){
            console.log("Editt ::::")
            console.log("GenderType:::", _genderType);
            console.log("CustomerType:::", _customerType);
            
            $('#sample_form div div .customertype').html(_customerType);
            $('#sample_form div div .gender').html(_genderType);
    
            var id = $(this).data('id');
    
            $('#dynamic_modal_title').text('Edit Data');
    
            $('#action').val('Edit');
    
            $('#action_button').text('Edit');
    
            $('#action_modal').modal('show');
    
            $.ajax({
                url:_url,
                method:"POST",
                data:{id:id, action:'fetch_single'},
                dataType:"JSON",
                success:function(data)
                {
                    console.log("Data::::", data);
                    $('#fullname').val(data.fullname);
                    $('#phone').val(data.phone);
                    $('#address').val(data.address);
                    $('#citizenIdentityCard').val(data.citizenIdentityCard);
                    $('#customertype').val(data.customertype);
                    $('#dateofbirth').val(data.dateofbirth);
                    $('#gender').val(data.gender);
                    $('#id').val(data.id);
                }
            });
    
        });
    
        $(document).on('click', '.delete', function(){
    
            var id = $(this).data('id');
    
            if(confirm("Are you sure you want to delete this data?"))
            {
                $.ajax({
                    url:_url,
                    method:"POST",
                    data:{action:'delete', id:id},
                    dataType:"JSON",
                    success:function(data)
                    {
                        $('#message').html('<div class="alert alert-success">'+data.message+'</div>');
                        load_data();
                        setTimeout(function(){
                            $('#message').html('');
                        }, 5000);
                    }
                });
            }
    
        });
    });
    
    </script>